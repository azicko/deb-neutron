/var/log/neutron/neutron-server.log {
    daily
    missingok
    compress
    delaycompress
    notifempty
    postrotate
        if dpkg-vendor --derives-from ubuntu ; then
            service neutron-server restart >/dev/null 2>&1 || true
        else
            invoke-rc.d neutron-server restart >/dev/null 2>&1 || true
        fi
    endscript
}